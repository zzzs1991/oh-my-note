29.
    vim ~/.vim/vimrc

    let mapleader=" "
    syntax on
    set number
    set relativenumber
    set cursorline
    set wrap
    set showcmd
    set wildmenu
    set hlsearch
    set insearch
    set ignorecase
    set smartcase
    exec "nohlsearch"


    noremap

    map s <nop>
    map S :w<CR>
    map Q :q<CR>
    map R :source $MYVIMRC<CR>

    call plug#begin ('~/.vim/plugged')

    Plug ''
        - vim-airline
        - vim-snazzy

    call plug#end()


    ---
    :split
    :vsplit

    ---
    vim-plugin


    ---
    vim 
        - v 可视模式
        - V 可视行模式
        - ctrl v 可视块模式
    
    
    